# Supabase Configuration
SUPABASE_URL=your-project-url.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# App Configuration
APP_NAME=Kasir App
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=false

# Receipt Settings
ENABLE_PRINT_RECEIPT=true
ENABLE_EMAIL_RECEIPT=true
ENABLE_WHATSAPP_RECEIPT=true

# Storage Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_IMAGE_TYPES=jpg,jpeg,png

# Cache Settings
CACHE_DURATION=3600  # 1 hour in seconds

# Security Settings
JWT_EXPIRY=86400  # 24 hours in seconds
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=true
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=300  # 5 minutes in seconds

# Subscription Packages
BASIC_PACKAGE_ID=basic_monthly
PRO_PACKAGE_ID=pro_monthly
PREMIUM_PACKAGE_ID=premium_monthly

# Stock Settings
LOW_STOCK_THRESHOLD=10
ENABLE_STOCK_ALERTS=true

# Transaction Settings
DEFAULT_TAX_RATE=0.11  # 11%
RECEIPT_VALIDITY_DAYS=30

# Development Settings
ENABLE_DEBUG_TOOLBAR=true
ENABLE_API_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Test Settings
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test123
